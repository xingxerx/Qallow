# Qallow Server Configuration

# Server Settings
NODE_ENV=development
PORT=5000
FRONTEND_PORT=3000
HOST=localhost

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Quantum Framework
QUANTUM_FRAMEWORK=cirq
PYTHON_PATH=python3

# API Settings
API_TIMEOUT=30000
MAX_REQUEST_SIZE=50mb

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# WebSocket Settings
WS_ENABLED=true
WS_PING_INTERVAL=30000

# Error Handling
ERROR_LOG_RETENTION_DAYS=7
MAX_ERROR_LOG_SIZE=1000

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# Health Check
HEALTH_CHECK_INTERVAL=5000
HEALTH_CHECK_TIMEOUT=5000

# Database (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qallow
DB_USER=qallow
DB_PASSWORD=

# Google Quantum (optional)
GOOGLE_QUANTUM_API_KEY=

# IBM Quantum (optional)
IBM_QUANTUM_API_KEY=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
ENABLE_HELMET=true
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

