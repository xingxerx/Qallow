# ============================================================================
# Qallow Runtime Configuration
# ============================================================================
QALLOW_ENABLE_CUDA=auto
QALLOW_LOG_DIR=data/logs
QALLOW_PROFILE=native
QALLOW_DEFAULT_PHASE=13
QALLOW_METRICS_FORMAT=csv
QALLOW_TELEMETRY_STREAM=data/logs/telemetry.csv
QALLOW_HUMAN_FEEDBACK=data/human_feedback.txt
QISKIT_IBM_TOKEN=

# ============================================================================
# AI Model API Keys (Choose ONE or use Ollama for local)
# ============================================================================

# Google Gemini (Free tier available)
# Get key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# Anthropic Claude (Requires paid account)
# Get key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI (Requires paid account)
# Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# ============================================================================
# Ollama Configuration (Local AI - No API key needed!)
# ============================================================================
# Start Ollama: ollama serve
# Download model: ollama pull llama2
OLLAMA_API_BASE=http://localhost:11434

# ============================================================================
# MCP Memory Service Configuration
# ============================================================================
MCP_MEMORY_STORAGE_BACKEND=sqlite_vec
MCP_MEMORY_SQLITE_VEC_PATH=~/.local/share/mcp-memory
PYTHONPATH=/root/Qallow/mcp-memory-service/src
LOG_LEVEL=INFO
